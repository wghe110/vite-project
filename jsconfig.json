{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "/@/*": [
        "src/*"
      ],
      "/@public/*": [
        "public/*"
      ]
    },
    "target": "ES6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "public/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}